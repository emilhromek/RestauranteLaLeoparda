@{
    ViewData["Title"] = "Mercaderias";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<!-- Primera parte-->

<div id="contenedor">

    <h1 class="text-light text-center">Crear comanda</h1>

    <br />&nbsp;

    <div class="row">

    <div class="col-md-6">

    <h4 class="text-light">Seleccione una forma de entrega:</h4>

    <select id="formaEntregaComandas-dropdown" name="formaentrega" class="btn btn-primary dropdown-toggle" aria-label=".form-select-lg example">
    </select>

    <br />&nbsp;

    </div>

    <div class="col-md-6">

    <h4 class="text-light">Seleccione tipo de mercadería:</h4>

    <select id="tipoMercaderiasComandas-dropdown" onchange="mostrarMercaderiaComanda()" name="tipomercaderias" class="btn btn-primary dropdown-toggle" aria-label=".form-select-lg example">
    </select>

    <br />&nbsp;

    </div>

    </div>

    <br />&nbsp;

    <div class="row">

        <div class="col-md-6">

    <h4 class="text-light">Mercaderías disponibles:</h4>

    <div>
        <table class="table bg-light">
            <thead>
                <tr>
                    <th class="text-dark" scope="col">Nombre</th>
                    <th class="text-dark" scope="col">Precio ($)</th>
                    <th class="text-dark" scope="col">Agregar</th>
                </tr>
            </thead>
            <tbody id="tablamercaderias">
            </tbody>
        </table>
    </div>
    <hr />&nbsp;

    </div>

    <div class="col-md-6">

    <h4 class="text-light">
        Mercaderías agregadas:
    </h4>

    <div>
        <table class="table bg-light">
            <thead>
                <tr>
                    <th class="text-dark" scope="col">Nombre</th>
                    <th class="text-dark" scope="col">Precio ($)</th>
                    <th class="text-dark" scope="col">Quitar</th>
                </tr>
            </thead>
            <tbody id="listacomanda">
            </tbody>
        </table>
    </div>

    </div>

    </div>

    <hr />&nbsp;

    <div class="row">

    <div class="col-md-6">

    <h4 class="text-light">
        Precio total ($):
    </h4>   

    <h4 id="precioTotal" class="text-light">
        0
    </h4>    

    </div>

    <div class="col-md-6">    

    <h4 class="text-light">Enviar comanda:</h4>
    <button class="btn btn-primary" type=button onclick="enviarComanda()">Enviar</button>

    </div>

    </div>

    <br />&nbsp;

</div>

<!-- script 1-->

<script src="~/js/mercaderias1.js" type="text/javascript"></script>

<!-- script 2-->

<script src="~/js/mercaderias2.js" type="text/javascript"></script>

<!-- script 3-->

<script src="~/js/mostrarMercaderiaComanda.js" type="text/javascript"></script>

<!-- script 4-->

<script src="~/js/agregarMercaderia.js" type="text/javascript"></script>

<!-- script 5-->

<script src="~/js/DeleteRow.js" type="text/javascript"></script>

<!-- script 6-->

<script src="~/js/enviarComanda.js" type="text/javascript"></script>

<!-- Segunda parte-->

<div id="contenedor">

    <h1 class="text-light text-center">Ver información de mercaderías</h1>
    <br />&nbsp;

    <h4 class="text-light">Seleccione un tipo de mercaderia para listar:</h4>

    <select id="tipoMercaderiaInformacion-dropdown" onchange="mostrarMercaderia()" name="tipomercaderia" class="btn btn-primary dropdown-toggle" aria-label=".form-select-lg example">
    </select>

    <br />&nbsp;

    <h4 class="text-light">Información disponible de mercadería:</h4>

    <div class="container-fluid">
        <div class="row justify-content-center text-center" id="contenedordemercaderias">
        </div>


    </div>

</div>

<!-- script 7-->

<script src="~/js/mercaderias3.js" type="text/javascript"></script>

<!-- script 8-->

<script src="~/js/mostrarMercaderia.js" type="text/javascript"></script>

